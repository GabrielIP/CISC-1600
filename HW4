#include <iostream>
using namespace std;
int main ()
{
int i= 1;// tells program to start at 1
double x= 0;//allows for decimals
double sum= 0; //place holder
	cout << "Hey can you help me practice my addition skills? Just give me three numbers, they can even be decimals! \n";
	cout << endl;// line used as a spacer
		for (int i = 1; i < 4; i++)//loop starts at 1 and ends at less than 4 which is 3. i++ adds to existing integer.
		{
			cout << "Throw me a number \n" << i;
			cin >> x; // number entry that terminates at i<4
				{	
				sum = x + sum;
				}
			}
			cout << "Remember those numbers you put in? They add up to "<< sum << endl;//output of three intergers
			cout << "Thanks for the practice! \n";
		return 0;
		}
